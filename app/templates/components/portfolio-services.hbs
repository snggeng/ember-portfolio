
<!-- Services Section -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">About</h2>
                {{#each model as |profile|}}
                <h3 class="section-subheading text-muted">{{profile.description}}</h3>
                {{/each}}
            </div>
        </div>
        <div class="row text-center">
          {{#each model as |profile|}}
          {{#each profile.hats as |hat|}}
            <div class="col-md-4">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle fa-stack-2x text-primary"></i>
                    <i class="fa fa-coffee fa-stack-1x fa-inverse" {{bind-attr class=hat.icon alt=hat.category}}></i>
                </span>
                <h4 class="service-heading">
                    <strong>{{hat.category}}</strong>
                </h4>
                <p class="text-muted">{{hat.description}}</p>
            </div>
            {{/each}}
          {{/each}}
        </div>
    </div>
</section>
