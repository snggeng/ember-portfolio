<!-- Portfolio Grid Section -->
<section id="portfolio" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Portfolio</h2>
                <svg version="1.1" id="Layer_3" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                	 width="200px" height="200px" viewBox="0 0 64 64" enable-background="new 0 0 64 64" xml:space="preserve">
                <g>
                	<rect x="1" y="15" fill="none" stroke="#fed136" stroke-width="2" stroke-miterlimit="10" width="54" height="42"/>
                	<polyline fill="none" stroke="#fed136" stroke-width="2" stroke-miterlimit="10" points="11,12 11,7 63,7 63,50 58,50 	"/>
                	<line fill="none" stroke="#fed136" stroke-width="2" stroke-miterlimit="10" x1="1" y1="23" x2="55" y2="23"/>
                	<line fill="none" stroke="#fed136" stroke-width="2" stroke-miterlimit="10" x1="10" y1="19" x2="6" y2="19"/>
                	<line fill="none" stroke="#fed136" stroke-width="2" stroke-miterlimit="10" x1="18" y1="19" x2="14" y2="19"/>
                	<line fill="none" stroke="#fed136" stroke-width="2" stroke-miterlimit="10" x1="26" y1="19" x2="22" y2="19"/>
                </g>
                </svg>
                <h3 class="section-subheading text-muted">Stuff I've worked on before.</h3>
            </div>
        </div>
        <div class="row">
          {{#each model as |project|}}
            <div class="col-md-4 col-sm-6 portfolio-item">
                <a href="#{{project.id}}" class="portfolio-link" data-toggle="modal">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <i class="fa fa-plus fa-3x"></i>
                        </div>
                    </div>
                    <img src="img/portfolio/{{project.image.display}}" class="img-responsive" alt="{{project.title}}">
                </a>
                <div class="portfolio-caption">
                    <h4>{{project.title}}</h4>
                    <p class="text-muted">{{project.description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        <!-- carousel -->
        <div class="row">
          <div class="col-lg-12 text-center">
              <h2 class="section-heading">Photography</h2>
          </div>
          <br>
          <br>
          <div class="col-md-4 col-sm-6 portfolio-item">
              <a href="#photo-essay-1" class="portfolio-link" data-toggle="modal">
                  <div class="portfolio-hover">
                      <div class="portfolio-hover-content">
                          <i class="fa fa-plus fa-3x"></i>
                      </div>
                  </div>
                  <img src="img/table-set.jpg" class="img-responsive" alt="test">
              </a>
              <div class="portfolio-caption">
                  <h4>Photo Essay 1</h4>
                  <p class="text-muted">Interesting Objects, Mundane Work</p>
              </div>
          </div>

        </div><!-- /.container -->
    </div>
</section>
